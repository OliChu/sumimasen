<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <div class="form-wrapper">
        <%= simple_form_for @ingredient do |f| %>
          <%= f.input :name, label: false, placeholder: 'ingredient Name' %>
          <%= f.input :description, label: false, placeholder: 'Ingredient description'%>
          <%= f.button :submit, class: "btn btn-info"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
