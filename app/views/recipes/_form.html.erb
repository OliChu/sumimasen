          <%= f.input :servings, label: false, placeholder: 'Nombre de personnes' %>
          <%= f.input :preparation_time, label: false, placeholder: 'Temps de prÃ©paration (min)' %>
          <%= f.input :cooking_time, label: false, placeholder: 'Temps de cuisson (min)' %>
          <%= f.association :tools,label: false %>
